{
  "$schema": "https://json.schemastore.org/swcrc.json",
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": true
    },
    "transform": {
      "react": {
        "runtime": "automatic",
        "useBuiltins": true
      }
    }
  },
  "env": {
    // bug - cannot get target browsers from package.json nor .browserslistrc
    "targets": "chrome >= 88",
    "mode": "usage",
    "coreJs": 3,
    "shippedProposals": true
  }
}
