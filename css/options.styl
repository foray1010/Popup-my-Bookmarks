$main-color1 = #0092fa
$main-color2 = #fa9115

$input-height = 20px

$donate-desc-width = 400px
$donate-img-width = 160px
$donation-width = $donate-desc-width + $donate-img-width

$logo-book-width = 62px


body
  font: 12px sans-serif

input[type="number"],
select
  box-sizing: content-box
  height: $input-height

input
  &[type="checkbox"]
    vertical-align: middle

  &[type="number"]
    text-align: right
    width: 50px

select[multiple]
  height: 100%


.footer-hr
  background: $main-color2
  border: 0
  height: 1px
  margin: 0 auto
  width: calc(100% - 20px)

.input-select-box
  border: 1px solid $main-color1
  display: inline-block
  position: relative

  & > input,
  & > select
    border: 0 !important

  & > input
    box-sizing: border-box
    height: 100%
    left: 0
    padding: 4px
    position: absolute
    text-align: left
    top: 0
    width: calc(100% - 20px)

.link
  color: $main-color1
  cursor: pointer
  font-weight: bold
  text-decoration: none

  &:hover
    color: $main-color2

.opt-desc,
.opt-input
  display: table-cell
  height: 38px
  vertical-align: middle

.opt-desc
  text-align: right
  width: 390px

.opt-input
  padding-left: 20px

.select-multiple-box
  border: 1px solid $main-color1
  padding: 4px

  & input
    margin-right: 4px

.selectbox
  background: #fff
  border: 1px solid currentcolor
  color: $main-color1
  display: table
  height: $input-height
  position: relative
  text-align: center
  transition-duration: .4s
  -webkit-user-select: none
  width: 80px

.selectbox-cover
  background: currentcolor
  height: 100%
  position: absolute
  transition-duration: inherit
  transition-property: left

.selectbox-item
  cursor: pointer
  display: table-cell
  position: relative
  transition-duration: inherit
  transition-property: color
  vertical-align: middle

.selectbox-item-active
  color: #fff
  cursor: default


#container
  border: 1px solid #784c00
  width: 720px

  // vertical & horizontal center
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  margin: auto

#donate-desc
  float: left
  width: $donate-desc-width

#donate-img
  float: left
  width: $donate-img-width

#donation
  height: 50px
  margin: auto
  padding: 10px 0 20px
  width: $donation-width

#logo-book
  background: #784c00
  height: inherit
  left: 0
  position: absolute
  top: 0
  width: $logo-book-width

#logo-box
  cursor: default
  height: 80px
  -webkit-user-select: none

#logo-memo div
  height: 18px

  &:nth-of-type(1)
    background: $main-color1

  &:nth-of-type(2)
    background: $main-color2

  &:nth-of-type(3)
    background: #6cb

  &:nth-of-type(4)
    background: #e77

#logo-title
  background: url("/img/opt_title.png") no-repeat center center
  height: 69px
  position: absolute
  right: 0
  top: 0
  width: "calc(100% - %s)" % $logo-book-width

#opt-button
  margin: 0 50px 5px 0
  text-align: right

#star-five
  margin: 32px 6px
  -webkit-transform: rotate(35deg)
  width: 0

  &,
  &:before,
  &:after
    border-color: #fc0 transparent
    border-style: solid

  &,
  &:after
    border-width: 0 25px 18px 25px

  &:before
    border-width: 0 6px 20px 6px
    content: ""
    left: -16px
    position: absolute
    top: -14px
    -webkit-transform: rotate(-35deg)

  &:after
    content: ""
    left: -26px
    position: absolute
    top: 0
    -webkit-transform: rotate(-70deg)
