doctype html
meta(charset="utf-8")
title Popup my Bookmarks
each x in ["common", "pmb"]
  link(rel="stylesheet", href="css/#{x}.css")

body.panel-width
  div#sub.container.panel-width
  div#main.container.panel-width
    div#searchbox
      input#search-input(type="search", tabindex="-1")

  div#menu-cover.ninja(hidden)
  div#menu(hidden)
  div#editor.panel-width(hidden)
    span#edit-title &nbsp;
    input(type="text")
    input(type="text")
    button
    button

  div#preload(hidden)
    div.box-template
      div.headbox
        div.head-title
        div.head-close
      div.folderlist

    p.bkmark(draggable="true")
      img.icon(src="", alt="", draggable="false")
      span

    div#drag-place

each x in ["common", "pmb"]
  script(src="js/#{x}.js")
