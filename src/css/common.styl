@import "./_components/variables"
@import "../../node_modules/normalize.css/normalize.css"

@font-face
  font-family: ArchivoNarrow
  src: url("/font/ArchivoNarrow-Regular.woff")

body
  background-color: $blank-color
  color: $main-font-color

button
  background-color: $highlight-level1
  border: 0
  padding: 4px 8px

  &:hover
    color: $main-color1

a,
button,
input[type="checkbox"],
input[type="number"],
input[type="search"],
input[type="text"],
select
  outline-color: $highlight-level5
  outline-width: 1px

  &:focus
    outline-style: solid

input[type="number"],
input[type="search"],
input[type="text"],
select
  background-color: $blank-color
  border: 1px solid $main-color1
  padding: 0 $golden-gap-2x
