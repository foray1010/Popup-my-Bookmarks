@import "./components/variables"

$options-input-height = 22px

nav-bar-item-colorizing()
  &:nth-of-type(1)
    border-bottom-color: $main-color1

  &:nth-of-type(2)
    border-bottom-color: $main-color2

  &:nth-of-type(3)
    border-bottom-color: $main-color3

  &:nth-of-type(4)
    border-bottom-color: $main-color4

body
  font: 12px sans-serif
  width: 750px

input[type="number"],
input[type="text"],
select
  box-sizing: border-box
  height: $options-input-height

input[type="number"]
  text-align: right
  width: 50px

.nav-bar-item
  border-bottom: $golden-gap-2x solid transparent
  color: $blank-color
  cursor: default
  flex: 1 0 0
  font: 16px ArchivoNarrow
  padding-top: $golden-gap-2x
  text-align: center
  text-decoration: none

  &:hover
    nav-bar-item-colorizing()

.nav-bar-item-active
  nav-bar-item-colorizing()

.select-button-item
  align-items: center
  color: inherit
  cursor: pointer
  display: flex
  height: 100%
  justify-content: center
  transition-duration: inherit
  transition-property: color
  width: 100%

.select-button-item-active
  color: $blank-color
  cursor: default

.select-button-label
  flex: 1 0 0
  height: 100%
  position: relative
  transition-duration: inherit
